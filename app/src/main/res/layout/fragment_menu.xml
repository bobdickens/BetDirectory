<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundmenu"
    android:padding="20dp"
    tools:context=".MenuFragment">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="304dp"
        android:layout_height="34dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/betdirctory"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnTypes"
        android:layout_width="350dp"
        android:layout_height="81dp"
        android:background="@drawable/button_style3"
        android:text="TYPES OF BETS"
        android:textColor="@color/material_dynamic_neutral30"
        android:textSize="40sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.201"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnStrategy"
        android:layout_width="350dp"
        android:layout_height="81dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/button_style3"
        android:text="strategy"
        android:textColor="@color/material_dynamic_neutral30"
        android:textSize="40sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="@+id/btnTypes"
        app:layout_constraintStart_toStartOf="@+id/btnTypes"
        app:layout_constraintTop_toBottomOf="@+id/btnTypes" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnFAQ"
        android:layout_width="350dp"
        android:layout_height="81dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/button_style3"
        android:text="FAQ"
        android:textColor="@color/material_dynamic_neutral30"
        android:textSize="40sp"

        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btnStrategy"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/btnStrategy"
        app:layout_constraintTop_toBottomOf="@+id/btnStrategy"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>